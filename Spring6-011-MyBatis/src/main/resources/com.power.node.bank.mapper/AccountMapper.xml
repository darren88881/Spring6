<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.power.node.bank.mapper.AccountMapper">
    <insert id="insertAccount" parameterType="com.power.node.bank.pojo.Account">
        insert into t_act values(#{actno},#{balance})
    </insert>

    <delete id="deleteAccountByActno" parameterType="java.lang.String">
        delete from t_act where actno = #{actno}
    </delete>

    <update id="updateAccount" parameterType="com.power.node.bank.pojo.Account">
        update t_act set balance = #{balance} where actno = #{actno}
    </update>

    <select id="selectAccountByActno" resultType="com.power.node.bank.pojo.Account"
            parameterType="java.lang.String">
        select * from t_act where actno = #{actno}
    </select>

    <select id="selectAccountAll" resultType="com.power.node.bank.pojo.Account">
        select * from t_act
    </select>

</mapper>